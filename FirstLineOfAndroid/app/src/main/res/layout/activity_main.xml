<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button android:id="@+id/ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="确认"/>
    <Button android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/ensure"
        app:layout_constraintStart_toStartOf="parent"
        android:text="存储"/>
    <Button android:id="@+id/shared_preferences"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/save"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:text="SharedPreferences"/>
    <Button android:id="@+id/get_image"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/shared_preferences"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:text="获取图片"/>
    <Button android:id="@+id/cycle"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/get_image"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:text="轮播图"/>

</androidx.constraintlayout.widget.ConstraintLayout>